<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light"></style>

    <style name="AppTheme.Full" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Full">
        <!--设置背景图或者透明色-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="mainBottomItem_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mainBottomItem_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="mainBottomItem_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="line_division_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_line_division_horizontal</item>
        <item name="android:background">@color/line_division</item>
    </style>

    <style name="bar_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/white_press_selector</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bar_login_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="bar_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bar_input_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="common_panel_module_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/white_press_selector</item>
    </style>

    <style name="me_bar_style" parent="common_panel_module_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="me_bar_main_textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
