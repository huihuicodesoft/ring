<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="cn.com.wh.ring.ui.activity.MainActivity">

    <cn.com.wh.ring.ui.view.UnTouchViewPager
        android:id="@+id/unTouchViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_ll"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <View style="@style/line_division_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/back_main_bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bottom_home_ll"
                style="@style/mainBottomItem_container">

                <ImageView
                    style="@style/mainBottomItem_image"
                    android:src="@drawable/main_home" />

                <TextView
                    style="@style/mainBottomItem_text"
                    android:text="@string/home" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_activity_ll"
                style="@style/mainBottomItem_container">

                <ImageView
                    style="@style/mainBottomItem_image"
                    android:src="@drawable/main_help" />

                <TextView
                    style="@style/mainBottomItem_text"
                    android:text="@string/help" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_publish_ll"
                style="@style/mainBottomItem_container">

                <ImageView
                    style="@style/mainBottomItem_image"
                    android:layout_height="match_parent"
                    android:src="@drawable/main_publish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_find_ll"
                style="@style/mainBottomItem_container">

                <ImageView
                    android:id="@+id/imageView"
                    style="@style/mainBottomItem_image"
                    android:src="@drawable/main_find" />

                <TextView
                    style="@style/mainBottomItem_text"
                    android:text="@string/find" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_me_ll"
                style="@style/mainBottomItem_container">

                <ImageView
                    style="@style/mainBottomItem_image"
                    android:src="@drawable/main_me" />

                <TextView
                    style="@style/mainBottomItem_text"
                    android:text="@string/me" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
