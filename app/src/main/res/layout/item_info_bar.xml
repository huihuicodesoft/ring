<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_info_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/panel_left_right"
    android:paddingRight="@dimen/panel_left_right">

    <ImageView
        android:id="@+id/item_info_avatar_iv"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/item_info_nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:maxLines="1"
        android:textColor="@color/font_black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item_info_delete"
        android:layout_width="@dimen/height_item_info_bar"
        android:layout_height="@dimen/height_item_info_bar"
        android:padding="15dp"
        android:src="@drawable/delete"/>

</LinearLayout>